<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Settings</title>
	<meta name="description" content="Bookmarx">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="icon" href="/imgs/tp.png">

	<link rel="stylesheet" href="/css/style.css">
</head>

<body class="black-background">
  <nav>
    <ul>
      <li><a href="/index.html">BookMarx</a></li>
    </ul>
  </nav>
  <section class="slide">
		<div class="formcontainer column-40">
			<h1>Settings</h1>

			<div class="settinggroup">
				<h2>Change Password</h2>
				<form action="updatepassword" method="POST">
					<div class="inputgroup">
						<input type="text" name="oldPassword"  autofocus required/>
						<span class="bar"></span>
						<label>Original Password</label>
					</div>
					<div class="inputgroup">
						<input type="text" name="newPassword" required/>
						<span class="bar"></span>
						<label>New Password</label>
					</div>
					<div class="inputgroup">
						<input type="text" name="reNewPassword" required/>
						<span class="bar"></span>
						<label>Confirm New Password</label>
					</div>
					<div class="inputgroup">
						<input type="submit" class="boxButton okayButton" value="Change Password"/>
					</div>
				</form>
		</div>
  </section>

  </body>
</html>
