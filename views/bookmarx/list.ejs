<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>BookMarx</title>
  <meta name="description" content="The Home Page of BookMarx">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="/img/favicon.ico">

  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <nav>
    <ul class="nav-title">
      <li><a href="index.html">BookMarx</a></li>
    </ul>
    <div class="searchContainer">
      <div class="folderSearchBar">
        <form action="/bookmarx" method="GET">
        <input type="text" name="search" placeholder="Search" value="<%= search %>"/>
        <select name="ordering">
          <option value="asc" <% if (ordering === 'asc') {%> selected <%} %>>A-Z</option>
          <option value="desc" <% if (ordering === 'desc') {%> selected <%} %>>Z-A</option>
        </select>
        <input type="submit" value="Search">
      </form>
      </div>
    </div>
    <ul class="navbar-right">
      <li class="navbar-hide"><a href="/bookmarx/add" class="tooltip"><img src="/img/ic_bookmark_white_48dp_2x.png" alt="bookmark"><span class="tooltiptext">Add a BookMarx</span></a></li>
      <li class="navbar-hide"><a href="/bookmarx/addfolder" class="tooltip"><img src="/img/ic_create_new_folder_white_48dp_2x.png" alt="folder"><span class="tooltiptext">Add a Folder</span></a></li>
      <li class="navbar-hide"><a href="/bookmarx/settings" class="tooltip"><img src="/img/ic_import_export_white_48dp_2x.png" alt="bookmark"><span class="tooltiptext">Import/Export BookMarx</span></a></li>
      <li><a class="tooltip" href="/logout"><img src="/img/ic_exit_to_app_white_48dp_2x.png" alt="settings"><span class="tooltiptext" >Logout</span></a></li>
    </ul>
  </nav>

  <div class="container">
    <section class="side-nav-container desktopView">
      <h2>Quicklinks</h2>
      <ul>
        <li><a>My BookMarx</a></li>
        <li><a>Most Visited</a></li>
        <li><a>Favorites</a></li>
        <li class="side-nav-divider"></li>
        <li><a>Videos</a></li>
        <li><a>Images</a></li>
        <li><a>Articles</a></li>
      </ul>
    </section>
    <section class="slide-container">
      <div class="slide">
        <!-- Need to make templates TODO -->
        <% folderList.forEach(function(folder) { %>
        <div class="column- folderContainer">
          <div class="folder" id="folder1">
            <h2><%= folder.name %></h2>
            <a class="folderToggle openFolder" href="/bookmarx/<%= folder.id %>"><img src="/img/ic_keyboard_arrow_up_black_48dp_2x.png" alt="arrow"/></a>
            <a href="/foldersetting/<%= folder.id %>"><img class="cog" src="/img/ic_settings_black_48px.svg" alt="settings"/></a>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

    <section class="right-container desktopView">
      <div class="slide">

        <div class="folderContent">
          <ul>
            <% bookmarxList.forEach(function(bookmarx) { %>
              <li>
                <div class="bookmark">
                  <a href="<%= bookmarx.url %>">
                    <h2><%= bookmarx.name %></h2>
                    <h3><%= bookmarx.url %></h3>
                  </a>
                  <a class="closeButton" href="/bookmarx/delete/<%= bookmarx.id %>"><img src="/img/ic_close_black_48dp_2x.png" alt="x"></a>
                  <div class="card__action-bar">
                    <form action="/bookmarx/staraction" method="POST">
                      <input type="hidden" value="asdf">
                      <button class="fab"><img src="/img/ic_star_white_48dp_2x.png" alt="star"></button>
                    </form>
                    <a class="card__button" href="/bookmarx/edit/<%= bookmarx.id %>">EDIT</a>
                  </div>
                </div>
              </li>
            <% }); %>
          </ul>
        </div>

      </div>
    </section>
  </div>

  <div class="overlay hide" onclick="closeOverlay(this)">
  </div>

  <div class="overlayContainer">
    <div class="mini-fab-container hide">
      <button class="mini-fab" onclick="window.location.replace('add.html')"><img src="/img/ic_bookmark_white_48dp_2x.png" alt="bookmark"></button>
      <button class="mini-fab" onclick="window.location.replace('folder.html')"><img src="/img/ic_create_new_folder_white_48dp_2x.png" alt="folder"></button>
    </div>
    <a class="fab" href="/bookmarx/add"><img src="/img/ic_add_white_48dp_2x.png" alt="plus"></a>
  </div>

</body>

</html>
